@model SHABAEIKO_ORGANIC_FARM.Models.Item

<form method="post" asp-action="Update">

    <input asp-for="Item_ID" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50" pl-3>Update Item Details</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">



                    <div class="col-3">
                        <label asp-for="ItemName"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Price"></label>
                    </div>
                
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <input asp-for="ItemName" class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="Description" class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="Price" class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Update" />
                        </div>

                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                        <div class="form-group">
                            <label asp-for="ImageFIle" class="control-label"></label>
                            <input asp-for="ImageFIle" accept="image/*" />
                            <span asp-validation-for="ImageFIle" class="text-danger"></span>
                        </div>

                    </div>


                </div>
            </div>
        </div>
    </div>
    
</form>


