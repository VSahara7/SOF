@model IEnumerable<SHABAEIKO_ORGANIC_FARM.Models.Item>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Items List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Item" asp-action="Create" class="btn btn-info">Add New Item</a>
        </div>
    </div>
</div>
<br />

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    Price
                </th>
                <th>
                    Changes
                </th>
                <th>
                    Image
                </th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="30%">@item.Item_ID</td>
                    <td width="30%">@item.ItemName</td>
                    <td width="30%">@item.Description</td>
                    <td width="30%">@item.Price</td>
                    <td width="30%">
                        <div class="w-100 btn-group" role="group">

                            <a asp-controller="Item" asp-action="Update" asp-route-Id="@item.Item_ID" class="btn btn-primary mx-1">Update</a>
                            <a asp-controller="Item" asp-action="Delete" asp-route-Id="@item.Item_ID" class="btn btn-danger mx-1">Delete</a>
                        </div>
                    </td>
                    <td width="5%"><img src="@("~/image/"+item.ItImage)" asp-append-version="true" width="180" height="170" /></td>
                </tr>
             
            }
        </tbody>
    </table>
}
else
{
    <p> No items create</p>
}


